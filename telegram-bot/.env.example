# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
ALLOWED_USER_ID=your_telegram_user_id

# Plane Configuration
PLANE_API_KEY=your_plane_api_key
PLANE_BASE_URL=https://your-plane-instance.com/api/v1
PLANE_WORKSPACE_SLUG=your_workspace_slug

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-haiku-4-5-20251001

# Agent Runner (optional)
AGENT_RUNNER_URL=http://localhost:3000

# GitHub Configuration (optional - enables project discovery features)
# Create a Personal Access Token at: https://github.com/settings/tokens
# Required scopes: public_repo (for public repos) or repo (for private repos)
GITHUB_PAT=your_github_personal_access_token

# Bot Data Directory (optional)
BOT_DATA_DIR=./data
