{
  "name": "agent-runner",
  "version": "1.0.0",
  "description": "Autonomous agent runner that picks up Plane tasks and works on them via Claude Code SDK",
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit",
    "start": "tsx src/index.ts",
    "start:local": "CONFIG_PATH=./config.local.json tsx --env-file=.env src/index.ts",
    "dev": "tsx --watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "skills:list": "tsx src/skills/cli.ts list",
    "skills:show": "tsx src/skills/cli.ts show",
    "skills:validate": "tsx src/skills/cli.ts validate"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "@anthropic-ai/sdk": "^0.78.0",
    "@hono/node-server": "^1.19.9",
    "@octokit/rest": "^22.0.1",
    "hono": "^4.12.3",
    "tsx": "^4.19.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
